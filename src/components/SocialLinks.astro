---
import type { SocialLinks } from '~/site.config'

interface Props {
  socialLinks: SocialLinks
}

const { socialLinks } = Astro.props
---

<div class="flex w-full max-w-md items-center justify-center gap-4">
  {
    socialLinks.github && (
      <a
        href={socialLinks.github}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link text-gray-400 hover:text-white transition-colors"
        title="GitHub"
