---
import siteConfig from '~/site.config'
import SocialLinks from '~/components/SocialLinks.astro'
---

<footer
  class="mt-auto pt-9 md:pt-11 grow-0 flex flex-col gap-6 items-center justify-between max-w-full text-gray-400"
>
  {siteConfig.socialLinks && <SocialLinks socialLinks={siteConfig.socialLinks} />}
  <div class="flex flex-col md:flex-row flex-wrap flex-1 items-center justify-center">
    <span class="my-1 text-center">
      {siteConfig.author} Â© 2025
    </span>
    <span class="mx-5 hidden md:block text-gray-600"> :: </span>
    <span class="my-1 text-center">
      Powered by <a
        class="underline text-blue-400 hover:text-blue-300 transition-colors"
        target="_blank"
        rel="noopener noreferrer"
        href="https://astro.build">Astro</a
      >
      & <a
        class="underline text-blue-400 hover:text-blue-300 transition-colors"
        target="_blank"
        rel="noopener noreferrer"
        href="https://github.com/chrisyy2003/velo">velo</a
      >
    </span>
  </div>
</footer>
