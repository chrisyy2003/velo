---
import '../styles/global.css'
import Navbar from '../components/Navbar.astro'
import Footer from '~/components/Footer.astro'

interface Props {
  title?: string
  description?: string
}

const { title = 'My Blog', description = 'A personal blog' } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
  </head>
  <body>
    <!-- Navbar -->
    <div
      id="top-row"
      class="z-50 pointer-events-none relative transition-all duration-700 max-w-4xl px-0 md:px-4 mx-auto"
    >
      <div id="navbar-wrapper" class="pointer-events-auto sticky top-0 transition-all">
        <Navbar />
      </div>
    </div>

    <!-- Main content -->
    <div class="relative w-full z-30 pointer-events-auto" style="top: 1rem;">
      <slot />
    </div>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(#bfababdc);
    min-height: 100vh;
  }
</style>
